{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "baseUrl": "./src", // root of your "paths" below. Required if "paths" is defined
    "paths": {
      "components/*": ["./components/*"], // enables us to use @components/MyComponent
      "types/*": ["./types/*"],
      "utils/*": ["./utils/*"],
      "assets/*": ["./assets/*"],
      "data/*": ["./data/*"]
    },
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
